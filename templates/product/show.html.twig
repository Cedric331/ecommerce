{% extends 'base.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}

{% block body %}
<div class="container my-5 py-5 z-depth-1">


  <!--Section: Content-->
  <section class="text-center">

    <!-- Section heading -->
    <h3 class="font-weight-bold mb-5">Information sur le produit</h3>

    <div class="row">

      <div class="col-lg-6">

        <div id="carousel-thumb" class="carousel slide carousel-fade carousel-thumbnails" data-ride="carousel">

          <div class="carousel-inner text-center text-md-left" role="listbox">
            <div class="carousel-item active">
              <img src="{{ asset('uploads/products/' ~ product.illustration) }}"
                alt="First slide" class="img-fluid">
            </div>
          </div>


        </div>

      </div>

      <div class="col-lg-5 text-center text-md-left">

        <h2 class="h2-responsive text-center text-md-left product-name font-weight-bold dark-grey-text mb-1 ml-xl-0 ml-4">
          <strong>{{ product.name }}</strong>
        </h2>
        <hr>
        <span class="badge badge-danger product mb-4 ml-xl-0 ml-4"></span>
        <h3 class="h3-responsive text-center text-md-left mb-5 ml-xl-0 ml-4">
          <span class="red-text font-weight-bold">
            <strong>Prix : {{ (product.price / 100) | number_format(2, ',', '.')}} â‚¬</strong>
          </span>
        </h3>

        <div>
          <div class="card">
            <div class="card-header">
              <a data-toggle="collapse" data-parent="#accordionEx" href="#collapseOne1" aria-expanded="true"
                aria-controls="collapseOne1">
                <h5 class="mb-0">
                  Description
                  <i class="fas fa-angle-down rotate-icon"></i>
                </h5>
              </a>
            </div>

            <div class="collapse show">
              <div class="card-body">
                {{ product.description|raw }}
              </div>
            </div>
          </div>

        </div>

        <section class="color">
          <div class="mt-5">

            <div class="row mt-3">
              <div class="col-md-12 text-center text-md-left text-md-right">
                <button class="btn btn-primary btn-lg btn-rounded text-center">
                  <i class="fas fa-cart-plus mr-2" aria-hidden="true"></i>Ajouter au panier</button>
              </div>
            </div>
          </div>
        </section>

      </div>
    </div>
  </section>
</div>
{% endblock %}
